@model IEnumerable<Subject>

@{
    ViewData["Title"] = "ViewMark";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}




<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h3 class="h3 mb-0 text-gray-800">My Marks</h3>
</div>
<hr />


<div class="col-md-12 mt-4">
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Subjects Marks</h6>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


                    <thead>
                        <tr>
                            <th class="">Teacher</th>
                            <th class="">Subject</th>
                            <th class="">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.SubjectDetails.Name
                                </td>
                                <td>
                                    <a class="btn btn-outline-success btn-sm"
                                       asp-action="SubjectMark"
                                       asp-route-id="@item.Id">
                                        <i class="fas fa-award"></i> View Mark
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



