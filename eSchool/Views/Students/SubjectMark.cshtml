@model Grade

@{
    ViewData["Title"] = "SubjectMark";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}


@if (Model == null)
{

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h2 class="h2 mb-0 text-gray-800">
            The subject has not been graded yet
        </h2>
    </div>
    <hr />
    return;
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h3 class="h3 mb-0 text-gray-800">
        <i class="fas fa-award"></i> View Mark
    </h3>
</div>
<hr />

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Class
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.myClass
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-graduation-cap fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class=" col-lg-4 col-md-6 col-sm-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Subject
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.Subject.SubjectDetails.Name
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class=" col-lg-4 col-md-6 col-sm-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Ypur Grade
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.avg
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tachometer-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">


    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th scope="col">Activity Mark(10)</th>
                                <th scope="col">First Mark(20)</th>
                                <th scope="col">Mid Mark(20)</th>
                                <th scope="col">Final Mark(50)</th>
                                <th scope="col">Total Mark(100)</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>@Model.ActivityMark</td>
                                <td>@Model.FirstMark</td>
                                <td>@Model.MidtMark</td>
                                <td>@Model.FinalMark</td>
                                <td>@Model.Total</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-secondary" asp-action="MyClass">Back</a>
            </div>
        </div>
    </div>
</div>





